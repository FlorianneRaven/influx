<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <title>InFlux - RSS Reader</title>

    <link rel="icon" href="{{ url }}/templates/influx-template-dark/img/Icone_Neurozone01.png">
    <meta name="theme-color" content="#563d7c">

    <link href="{{ url }}/templates/influx-template-dark/css/influx.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/3dc7e89a7c.js" crossorigin="anonymous"></script>
</head>
<body>
<header>
    <nav class="navbar sticky">
        <a class="" href="#">InFlux</a>
        <input class="" type="text" placeholder="Search" aria-label="Search">
        <ul class="">
            <li class="">
                <a class="" href="#">Sign out</a>
            </li>
        </ul>
    </nav>
</header>

<nav>
    {% for category in categories %}
        <h6 class="">
            <span>{{ category.name }}</span>
            <a class="" href="{{ url }}/category/{{ category.id }}"
               data-id="{{ category.id }}">
                <span data-feather="plus-circle"></span>
            </a>
            <a id="pageTop" class="hidden" style="display: none">{{ action }}</a>
        </h6>
        <ul class="">
            {% for flux in category.flux %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ url }}/flux/{{ flux.id }}" data-id="{{ flux.id }}">
                        <span data-feather="file-text"></span>
                        {{ flux.name }}
                        <span class="badge badge-info right unreadForFeed" data-mark-all-read="feed"
                              data-flux-id="{{ flux.id }}">{{ flux.unread }}</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endfor %}
</nav>

<section>
    <header>
        <h1 class="h2"><a target="_blank" rel="noopener noreferrer" href="{{ flux.website }}"
                          class="text-dark">{{ flux.name }}</a></h1>
        {{ flux.description }}
        <a href="{{ url }}/flux/{{ flux.id }}">Non lu</a>
    </header>

    {% include "item.twig" %}

</section>

</body>
</html>
