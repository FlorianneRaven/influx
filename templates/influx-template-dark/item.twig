{% for event in events %}
    {% set plainDescription = event.description|striptags|escape %}
    <div class="card" id="{{ event.id }}" data-feed="{{ event.flux }}">
        <div class="card-header">
            <h5 class="card-title">{{ event.pubdate }} - <a
                        href="{{ event.link }}">{{ event.title|escape }} </a></h5>
            <span class="description"> by {% if event.creator %}{{ event.creator }}{% endif %}</span>
            <button type="button" class="btn btn-tool readUnreadButton" data-toggle="tooltip"
                    title="Mark as read" onclick="readThis(this,'{{ event.id }}','item');">
                <i class="far fa-check-circle"></i></button>
        </div>
        <div class="card-body">
            {{ event.content|raw }}
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-dark" data-toggle="tooltip"
                    title="Mark as read" onclick="readThis(this,'{{ event.id }}','item');">
                <i class="far fa-check-circle"></i></button>
            <button type="button" class="btn btn-dark" data-toggle="tooltip" title="Bookmark"
                    onclick="markFlaggedUnflagged(this,'{{ event.id }}');">
                <i class="fa fa-heart"></i></button>
        </div>
    </div>
{% endfor %}
